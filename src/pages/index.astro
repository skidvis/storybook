---
import Player from '../components/vue/Player.vue';
import '../styles/styles.css';
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>MazeReader</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Comic+Neue:wght@700&family=Short+Stack&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Comic+Neue:wght@700&family=Montserrat+Subrayada:wght@400;700&family=Short+Stack&display=swap" rel="stylesheet">
	</head>
	<body class="bg-slate-500">
		 <div class="flex flex-col h-screen">
			<div class="header bg-slate-900 text-white font-bold pl-2 pt-1 montserrat-subrayada-bold">Maze<span class="text-lime-500">Reader</span></div>
			<div class="content flex-grow"><Player client:load /></div>
			<div class="footer bg-slate-900 text-white text-center">Copyright {new Date().getFullYear()} SharkJets - Made with ❤️ by Skid Vis</div>
		 </div>		
	</body>
</html>
